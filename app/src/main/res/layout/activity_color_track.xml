<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.genvict.customview.activity.ColorTrackActivity">

    <com.genvict.customview.view.ColorTrackView
        android:id="@+id/ctv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="36sp" />

    <Button
        android:id="@+id/leftToRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从左到右"
        app:layout_constraintTop_toBottomOf="@+id/ctv_test" />


    <Button
        android:id="@+id/rightToLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从右到左"
        app:layout_constraintTop_toBottomOf="@+id/leftToRight" />
</android.support.constraint.ConstraintLayout>
